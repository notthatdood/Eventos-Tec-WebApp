@page
@model Option2Model
@{
    ViewData["Title"] = "Calendario de Eventos";
    var userRole = @Model.role;
    string layoutName;

    switch (userRole)
    {
        case "1616": // Estudiante
            layoutName = "_LayoutEstudiante";
            break;
        case "1717": // Profesor
            layoutName = "_LayoutProfesor";
            break;
        case "1919": // Organizador
            layoutName = "_LayoutOrganizador";
            break;
        default:
            layoutName = "_ErrorLayout";
            break;
    }

    Layout = layoutName;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis próximos eventos</title>
    <!-- Enlace a Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
    <!-- Estilos CSS personalizados -->
    <style>
        /* Estilos para los cuadros de eventos */
        .event-card {
            background-color: #f8f9fa; /* Color de fondo */
            border: 1px solid #e2e2e2; /* Borde ligero */
            border-radius: 10px; /* Esquinas redondeadas */
            box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.1); /* Sombra suave */
            transition: transform 0.2s; /* Efecto de transición en hover */
        }

            .event-card:hover {
                transform: translateY(-5px); /* Eleva ligeramente el cuadro en hover */
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-1">Próximos Eventos</h1>
            </div>
        </div>

        <!-- Evento 1 -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card event-card">
                    <img src="https://www.zegelipae.edu.pe/sites/default/files/styles/hero_banner_node/public/BLOG/Computaci%C3%B3n%20e%20Inform%C3%A1tica/INFORMATICA-BANNER-DESKTOP.jpg" alt="Imagen del evento 1" class="card-img-left event_image_wide">
                    <div class="card-body">
                        <h5 class="card-title">Evento 1</h5>
                        <p class="card-text"><strong>Fecha:</strong> 25 de diciembre</p>
                        <p class="card-text"><strong>Título:</strong> Charla Sobre Diseño de Software</p>
                        <p class="card-text"><strong>Hora:</strong> 10:00 AM</p>
                        <p class="card-text"><strong>Lugar:</strong> B3-06</p>
                        <p class="card-text"><strong>Cupo Máximo:</strong> 100</p>
                        <p class="card-text"><strong>Organizador:</strong> ASODEC</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Evento 2 -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card event-card">
                    <img src="https://www.tec.ac.cr/sites/default/files/media/img/body/cic.png" alt="Imagen del evento 2" class="card-img-left event_image_wide">
                    <div class="card-body">
                        <h5 class="card-title">Evento 2</h5>
                        <p class="card-text"><strong>Fecha:</strong> 25 de diciembre</p>
                        <p class="card-text"><strong>Título:</strong> Charla Sobre Administración de Proyectos</p>
                        <p class="card-text"><strong>Hora:</strong> 11:00 AM</p>
                        <p class="card-text"><strong>Lugar:</strong> Auditorio de Centro de Investigación en Computación</p>
                        <p class="card-text"><strong>Cupo Máximo:</strong> 50</p>
                        <p class="card-text"><strong>Organizador:</strong> PM S.A</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Evento 3 -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card event-card">
                    <img src="https://www.zegelipae.edu.pe/sites/default/files/styles/hero_banner_node/public/BLOG/Computaci%C3%B3n%20e%20Inform%C3%A1tica/INFORMATICA-BANNER-DESKTOP.jpg" alt="Imagen del evento 1" class="card-img-left event_image_wide">
                    <div class="card-body">
                        <h5 class="card-title">Evento 3</h5>
                        <p class="card-text"><strong>Fecha:</strong> 26 de diciembre</p>
                        <p class="card-text"><strong>Título:</strong> Charla Sobre Critografía</p>
                        <p class="card-text"><strong>Hora:</strong> 13:00 AM</p>
                        <p class="card-text"><strong>Lugar:</strong> B3-06</p>
                        <p class="card-text"><strong>Cupo Máximo:</strong> 50</p>
                        <p class="card-text"><strong>Organizador:</strong> ASODEC</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Agrega más eventos aquí -->

    </div>

    <!-- Contenedor del modal -->
    <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalLabel">Título del Evento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Título:</strong> Descripción del evento</p>
                    <p><strong>Hora:</strong> Hora del evento</p>
                    <!-- Agregar más detalles del evento aquí -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Asistiré</button>
                    <button type="button" class="btn btn-primary">Me interesa</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-5rtj9St7Fq3XRWeGC6zPp19MgV1Fp4eM5pUnR+OGp1Q1ZC1l9RMjw5E5f5Frw5L5C" crossorigin="anonymous"></script>
</body>
</html>
